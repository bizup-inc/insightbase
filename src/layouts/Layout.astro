---
import "../styles/main.scss";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
}

const defaultTitle = "InsightBase";
const defaultDescription =
  "InsightBase Lightは、GA4・Google広告のレポート作成を効率化するLooker Studioテンプレートです。";
const defaultOgImage = "/assets/img/logo/ogp.jpg";

const {
  title = defaultTitle,
  description = defaultDescription,
  ogImage = defaultOgImage,
  ogType = "website"
} = Astro.props as Props;

const baseUrl = Astro.site ?? Astro.url;
const canonicalUrl = new URL(Astro.url.pathname, baseUrl).toString();
const ogImageUrl = new URL(ogImage, baseUrl).toString();
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/assets/img/logo/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="InsightBase" />
    <meta property="og:locale" content="ja_JP" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <slot name="head" />
  </head>
  <body>
    <header class="site-header">
      <div class="header-inner">
        <div class="brand">
          <a href="/"><img src="/assets/img/logo/ib_logo.svg" alt="InsightBase Lite" /></a>
        </div>
        <input class="nav-toggle" type="checkbox" id="nav-toggle" />
        <label
          class="nav-toggle-btn"
          for="nav-toggle"
          aria-label="メニューを開閉"
        >
          <span></span>
          <span></span>
          <span></span>
        </label>
        <nav class="site-nav" id="site-nav">
          <a class="" href="/ga4-report-template">GA4レポート</a>
          <a class="" href="/googlead-report-template">Google広告レポート</a>
          <a class="" href="/faq">よくあるお問い合わせ</a>
          <a class="" href="https://manual.insightbase.jp/" target="_blank">導入マニュアル</a>
          <a class="btn primary" href="/inquiry">お問い合わせ</a>
        </nav>
      </div>
    </header>
	<main>
    <slot />
	</main>

    <a href="#" class="back-to-top" aria-label="ページ先頭へ">トップへ</a>
    <script src="/assets/js/main.js" defer></script>
  </body>
</html>
